{% extends 'layout/layout' %}

{% block content %}

	<div class="row">
		{% if changeWebPwdForm %}
			<div class="col-sm-6">
				<h4>{{ translate('Change Web Password') }}</h4>

				{% if messagesWeb %}
					<div class="alert alert-success" role="alert">
						{% for message in messagesWeb %}
							{{ message }}
						{% endfor %}
					</div>
				{% endif %}
				{% set a = addEmailForm.changeWebPwdForm('action', url('PServerCore/user', {'action' : 'index'})) %}
				{{ formWidget(changeWebPwdForm, 'helper/formNoLabelWidget') }}
			</div>
		{% endif %}

		<div class="col-sm-6">
			<h4>{{ translate('Change ' ~ (changeWebPwdForm?'Ingame ':'') ~ 'Password') }}</h4>
			{% if messagesInGame %}
				<div class="alert alert-success" role="alert">
					{% for message in messagesInGame %}
						{{ message }}
					{% endfor %}
				</div>
			{% endif %}
			{% set a = addEmailForm.changeIngamePwdForm('action', url('PServerCore/user', {'action' : 'index'})) %}
			{{ formWidget(changeIngamePwdForm, 'helper/formNoLabelWidget') }}
		</div>

		{% if changeWebPwdForm %}
			<div class="clearfix"></div>
		{% endif %}

		{% if addEmailForm %}
		<div class="col-sm-6">
			<h4>{{ translate('Add Email') }}</h4>
			{% if errorsAddEmail %}
				<div class="alert alert-danger" role="alert">
					{% for error in errorsAddEmail %}
						{{ error }}<br />
					{% endfor %}
				</div>
			{% elseif messagesAddEmail %}
				<div class="alert alert-success" role="alert">
					{% for message in messagesAddEmail %}
						{{ message }}
					{% endfor %}
				</div>
			{% endif %}
			{% set a = addEmailForm.setAttribute('action', url('PServerCore/user', {'action' : 'add-email'})) %}
			{{ formWidget(addEmailForm, 'helper/formNoLabelWidget') }}
		</div>
		{% elseif changeEmailForm %}
			<div class="col-sm-6">
				<h4>{{ translate('Change Email') }}</h4>
				{% if errorsChangeEmail %}
					<div class="alert alert-danger" role="alert">
						{% for error in errorsChangeEmail %}
							{{ error }}<br />
						{% endfor %}
					</div>
				{% elseif messagesChangeEmail %}
					<div class="alert alert-success" role="alert">
						{% for message in messagesChangeEmail %}
							{{ message }}
						{% endfor %}
					</div>
				{% endif %}
				{% set a = changeEmailForm.setAttribute('action', url('PServerCore/user', {'action' : 'change-email'})) %}
				{{ formWidget(changeEmailForm, 'helper/formNoLabelWidget') }}
			</div>
		{% endif %}
	</div>
	<div class="clearfix"></div>
{% endblock content %}